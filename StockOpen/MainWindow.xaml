<Window x:Class="StockOpen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockOpen"
        mc:Ignorable="d" Background="AliceBlue"
        Title="开放式基金排行" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="mygrid"></DataGrid>
         <Button Grid.Row="1" Content="采集开放式基金" Click="Button_Click"  Margin="0 5 0 5"/>
       </Grid>
</Window>
